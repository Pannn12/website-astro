---
const navHome = "Home";
const navProfile = "About Me";
const navAbout = "About Web";
const Web = "Projects Used";
const Ref = "References";

import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
import htmlImage from "..//image/html.png";
import cssImage from "..//image/css.png";
import jsImage from "..//image/js.png";
import gitImage from "..//image/git.png";
import pinImage from "..//image/pin.png";
import gptImage from "..//image/gpt.png";
---

<Layout title="My Website">
  <nav class="navbar">
    <ul>
      <li><a href="/">{navHome}</a></li>
      <li><a href="/profil">{navProfile}</a></li>
      <li><a href="/about">{navAbout}</a></li>
    </ul>
  </nav>
  <main class="grid-container">
    <svg
      class="astro-a"
      width="495"
      height="623"
      viewBox="0 0 495 623"
      fill="none"
      xmlns="http://www.w3.org/2000/svg"
      aria-hidden="true"
    >
    </svg>
    <div class="web-container">
      <p class="web-text">{Web}</p>
      <div class="footer-container">
        <div class="footer-item">
          <Image
            src={htmlImage}
            alt="html"
            style="width: 50px; height: 50px; border-radius: 0; margin: 0 5px;"
          />
          <span>HTML</span>
        </div>
        <div class="footer-item">
          <Image
            src={cssImage}
            alt="css"
            style="width: 50px; height: 50px; border-radius: 0; margin: 0 5px;"
          />
          <span>CSS</span>
        </div>
        <div class="footer-item">
          <Image
            src={jsImage}
            alt="javascript"
            style="width: 50px; height: 50px; border-radius: 0; margin: 0 5px;"
          />
          <span>JavaScript</span>
        </div>
      </div>
    </div>

    <div class="web-container">
      <p class="web-text">{Ref}</p>
      <div class="footer-container">
        <div class="footer-item">
          <Image
            src={gitImage}
            alt="git"
            style="width: 50px; height: 50px; border-radius: 0; margin: 0 5px;"
          />
          <span>Git</span>
        </div>
        <div class="footer-item">
          <Image
            src={pinImage}
            alt="pin"
            style="width: 50px; height: 50px; border-radius: 0; margin: 0 5px;"
          />
          <span>Pin</span>
        </div>
        <div class="footer-item">
          <Image
            src={gptImage}
            alt="gpt"
            style="width: 50px; height: 50px; border-radius: 0; margin: 0 5px;"
          />
          <span>GPT</span>
        </div>
      </div>
    </div>
  </main>

  <style>
    main {
      margin: auto;
      padding: 1rem;
      width: 800px;
      max-width: calc(100% - 2rem);
      color: white;
      font-size: 20px;
      line-height: 1.6;
    }

    .grid-container {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 1rem; /* Jarak antar elemen */
    }

    .astro-a {
      position: absolute;
      top: -32px;
      left: 50%;
      transform: translatex(-50%);
      width: 220px;
      height: auto;
      z-index: -1;
    }

    .web-container {
      text-align: center;
    }

    .web-text {
      font-size: 1.5em;
      margin-bottom: 20px;
    }

    .footer-container {
      display: flex;
      justify-content: center;
    }

    .footer-item {
      text-align: center;
      margin: 0 10px;
    }

    .footer-item span {
      color: white;
      margin-top: 5px;
      display: block;
    }

    .footer-item img {
      width: 50px;
      height: 50px;
      border-radius: 0;
      margin: 0 5px;
    }

    .footer {
      text-align: center;
      margin: 0 10px;
      display: flex;
      flex-direction: column;
      align-items: center;
      text-align: center;
      margin-bottom: 2rem;
      background: #081519; /* Ganti dengan warna yang diinginkan */
      padding: 1.5rem;
      border-radius: 8px;
      color: white; /* Ganti dengan warna teks yang kontras */
    }

    .footer code {
      font-size: 0.8em;
      font-weight: bold;
      background: rgba(var(--accent-light), 12%);
      color: rgb(var(--accent-light));
      border-radius: 4px;
      padding: 0.3em 0.4em;
    }

    .footer strong {
      color: rgb(var(--accent-light));
    }

    nav {
      background-color: #132e35; /* Ganti dengan biru muda */
    }

    .navbar {
      list-style-type: none;
      margin: 0;
      padding: 0;
      overflow: hidden;
      margin-left: -40px;
    }

    .navbar li {
      display: inline;
      float: left;
    }

    .navbar a {
      display: block;
      color: white; /* Ganti dengan biru muda */
      text-align: center;
      padding: 14px 16px;
      text-decoration: none;
    }

    .navbar a:hover {
      background-color: #e4f4fd;
      color: #1f211c;
    }

    body {
      margin: 0;
    }
  </style>
</Layout>
