---
const userName = "Alfan Hidayat";
const navHome = "Home";
const navProfile = "About Me";
const navAbout = "About Web";
const unpam = "Pamulang University";
const iT = "Informatics Engineering";
const semester = "I am a College Student";
const contactMe = "Contact Me:";
const email = "alfanpartll@gmail.com";

import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
import { Image } from "astro:assets";
import alpanImage from "../image/alpan.jpg";
import instagramImage from "../image/instagram.png";
import linkedinImage from "../image/linkedin.png";
import spotifyImage from "../image/spotify.png";
import steamImage from "../image/steam.png";
---

<Layout title="My Website">
  <nav class="navbar">
    <ul>
      <li><a href="/">{navHome}</a></li>
      <li><a href="/profil">{navProfile}</a></li>
      <li><a href="/about">{navAbout}</a></li>
    </ul>
  </nav>
  <main>
    <svg
      class="astro-a"
      width="495"
      height="623"
      viewBox="0 0 495 623"
      fill="none"
      xmlns="http://www.w3.org/2000/svg"
      aria-hidden="true"
    >
    </svg>
    <p class="instructions">
      <Image
        src={alpanImage}
        alt="descriptive text"
        style="width: 100px; height: 100px; border-radius: 50%; float: right; display: block; margin: 0 auto;"
      />
      {semester}<br />
      <strong>{iT}</strong><br />
      <strong
        ><a
          href="https://unpam.ac.id/"
          style="color: white; text-decoration: none;">{unpam}</a
        ></strong
      >
    </p>
    <ul role="list" class="link-card-grid">
      <Card href={`mailto:${email}`} title="Email" body="Send Email" />
      <Card
        href="https://www.instagram.com/kelraskie/"
        title="Instagram"
        body="My Instagram"
      />
      <Card
        href="https://github.com/Pannn12"
        title="Github"
        body="Repository"
      />
      <Card
        href="https://open.spotify.com/playlist/58iyDhFJT2XZztfrXJMjsV"
        title="Spotify"
        body="My Playlist"
      />
    </ul>
    <p class="footer" style={{ textAlign: "center" }}>
      {contactMe}<br />
      <a href="https://www.instagram.com/kelraskie/" rel="noopener noreferrer">
        <Image
          src={instagramImage}
          alt="instagram"
          style="width: 50px; height: 50px; border-radius: 50%; margin: 0 5px;"
        />
      </a>
      <a
        href="https://open.spotify.com/playlist/58iyDhFJT2XZztfrXJMjsV"
        rel="noopener noreferrer"
      >
        <Image
          src={spotifyImage}
          alt="spotify"
          style="width: 50px; height: 50px; border-radius: 50%; margin: 0 5px;"
        />
      </a>
      <a
        href="https://www.linkedin.com/in/alfan-hidayat-0a019a29a/?utm_source=share&utm_campaign=share_via&utm_content=profile&utm_medium=android_app"
        rel="noopener noreferrer"
      >
        <Image
          src={linkedinImage}
          alt="linkedin"
          style="width: 50px; height: 50px; border-radius: 50%; margin: 0 5px;"
        />
      </a>
      <a
        href="https://steamcommunity.com/profiles/76561199164930515"
        rel="noopener noreferrer"
      >
        <Image
          src={steamImage}
          alt="steam"
          style="width: 50px; height: 50px; border-radius: 50%; margin: 0 5px;"
        />
      </a>
    </p>
  </main>
</Layout>

<style>
  main {
    margin: auto;
    padding: 1rem;
    width: 800px;
    max-width: calc(100% - 2rem);
    color: white;
    font-size: 20px;
    line-height: 1.6;
  }
  .astro-a {
    position: absolute;
    top: -32px;
    left: 50%;
    transform: translatex(-50%);
    width: 220px;
    height: auto;
    z-index: -1;
  }
  h1 {
    font-size: 4rem;
    font-weight: 700;
    line-height: 1;
    text-align: center;
    margin-bottom: 1em;
  }
  .text-gradient {
    background-image: var(--accent-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 400%;
    background-position: 0%;
  }
  .instructions {
    margin-bottom: 2rem;
    border: 1px solid #0d1f23; /* Warna #0D1F23 */
    background: #0d1f23; /* Warna #0D1F23 */
    padding: 1.5rem;
    border-radius: 8px;
    color: white;
  }
  .instructions code {
    font-size: 0.8em;
    font-weight: bold;
    background: #081519; /* Warna #081519 */
    color: white;
    border-radius: 4px;
    padding: 0.3em 0.4em;
  }
  .instructions strong {
    color: white;
  }
  .link-card-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
    gap: 2rem;
    padding: 0;
  }
  .card-logo {
    width: 10px;
    height: 10px;
    border-radius: 10%;
    margin-bottom: 10px;
  }
  .footer {
    display: block;
    flex-direction: column;
    align-items: left;
    text-align: right;
    margin-bottom: 2rem;
    border: 1px solid #0d1f23; /* Warna #0D1F23 */
    background: #0d1f23; /* Warna #0D1F23 */
    padding: 1.5rem;
    border-radius: 8px;
    color: white;
  }
  .footer code {
    justify-content: center;
    font-size: 0.8em;
    font-weight: bold;
    background: #081519; /* Warna #081519 */
    color: white;
    border-radius: 4px;
    padding: 0.3em 0.4em;
  }
  .footer strong {
    justify-content: center;
    color: white;
  }
  nav {
    background-color: #132e35;
  }
  .navbar {
    list-style-type: none;
    margin: 0;
    padding: 0;
    overflow: hidden;
    margin-left: -40px;
  }
  .navbar li {
    display: inline;
    float: left;
  }
  .navbar a {
    display: block;
    color: white;
    text-align: center;
    padding: 14px 16px;
    text-decoration: none;
  }
  .navbar a:hover {
    background-color: #e4f4fd;
    color: #1f211c;
  }
  body {
    margin: 0;
  }
</style>
